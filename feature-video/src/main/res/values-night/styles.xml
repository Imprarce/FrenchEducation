<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ImageViewStyle">
        <item name="android:tint">@color/dark_gray</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
        <item name="android:padding">@dimen/value_10_dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonEnterStyle">
        <item name="android:layout_marginTop">@dimen/value_32_dp</item>
        <item name="android:backgroundTint">@color/dark_more_blue_button</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonRegStyle">
        <item name="android:layout_marginTop">@dimen/value_32_dp</item>
        <item name="android:backgroundTint">@color/dark_blue_button</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchViewStyle">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:layout_marginStart">@dimen/value_16_dp</item>
        <item name="android:layout_marginEnd">@dimen/value_16_dp</item>
    </style>

    <style name="NavBottomIconColorStyle">
        <item name="itemIconTint">@color/dark_gray</item>
    </style>

    <style name="RecyclerViewStyleText">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
    </style>

    <style name="RecyclerViewSmallText">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/value_12_sp</item>
    </style>

    <style name="RecyclerViewBackgroundStyle">
        <item name="android:backgroundTint">@color/dark_purple</item>
    </style>

    <style name="FiltersStyle">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LinearLayoutSettingsStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/value_16_dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:longClickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:gravity">start|center</item>
        <item name="android:paddingBottom">@dimen/value_16_dp</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:background">@color/dark_black_icon_aut</item>
    </style>

    <style name="CommunityBackgroundStyle">
        <item name="android:background">@color/dark_purple</item>
    </style>


</resources>
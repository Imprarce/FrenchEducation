<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/value_16_dp"
    android:background="@drawable/custom_rectangle_recycler_view_task_not_decided"
    style="@style/RecyclerViewBackgroundStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/custom_rectangle_recycler_view_task_not_decided"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/task_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/value_16_dp"
            android:layout_marginEnd="@dimen/value_32_dp"
            android:paddingTop="@dimen/value_16_dp"
            android:paddingBottom="@dimen/value_16_dp"
            android:text="@string/example_text_for_lesson"
            android:textSize="@dimen/value_16_sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/task_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/value_16_dp"
            android:text="0%" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
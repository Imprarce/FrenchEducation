<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/value_16_dp"
    style="@style/RecyclerViewBackgroundStyle">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/image_ielts"
        android:layout_width="@dimen/value_90_dp"
        android:layout_height="@dimen/value_90_dp"
        android:layout_marginTop="@dimen/value_16_dp"
        android:layout_marginStart="@dimen/value_16_dp"
        android:layout_marginBottom="@dimen/value_16_dp"
        android:src="@drawable/image_plug"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/example_title_ielts"
        android:gravity="center"
        android:layout_marginTop="@dimen/value_16_dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_ielts"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/value_16_dp"
        android:layout_marginTop="@dimen/value_8_dp"
        android:text="@string/example_text_ielts"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_ielts"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginRight="@dimen/value_16_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
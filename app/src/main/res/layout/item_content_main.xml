<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/value_16_dp"
    style="@style/RecyclerViewBackgroundStyle">

    <ImageView
        android:id="@+id/pizza_image"
        android:layout_width="@dimen/value_60_dp"
        android:layout_height="@dimen/value_60_dp"
        android:layout_marginTop="@dimen/value_16_dp"
        android:layout_marginStart="@dimen/value_16_dp"
        android:layout_marginBottom="@dimen/value_16_dp"
        android:src="@drawable/image_plug"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="@dimen/value_0_dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/example_text_for_lesson"
        android:textSize="@dimen/value_14_sp"
        android:layout_marginStart="@dimen/value_16_dp"
        android:layout_marginEnd="@dimen/value_8_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pizza_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/level_lesson"/>

    <TextView
        android:id="@+id/level_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/a1"
        android:layout_marginEnd="@dimen/value_16_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/value_16_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
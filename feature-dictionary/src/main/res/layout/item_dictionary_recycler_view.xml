<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/value_16_dp"
    android:background="@drawable/custom_rectangle_recycler_view"
    style="@style/RecyclerViewBackgroundStyle">

    <TextView
        android:id="@+id/level_dictionary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/a1"
        android:layout_marginStart="8dp"
        android:padding="@dimen/value_4_dp"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/word_fr"
        android:layout_width="@dimen/value_80_dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/chanter"
        android:textAllCaps="true"
        android:padding="@dimen/value_4_dp"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/word_rus"
        android:layout_width="@dimen/value_80_dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/sing"
        android:textAllCaps="true"
        android:padding="@dimen/value_4_dp"/>

</LinearLayout>